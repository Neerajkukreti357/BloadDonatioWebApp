    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <style>
        .container {
            width:
                100%;
            margin:
                0 auto;
            text-align:
                center;
            padding:
                20px;
            border:
                1px solid #ccc;
            border-radius:
                10px;
            box-shadow:
                0 0 10px rgba(0,
                    0,
                    0,
                    0.1);
            height: 80%;
            display: flex;
            flex-direction: column;
        }

        .imgcontainer {
            text-align:
                center;
            margin-bottom:
                20px;
        }

        .avatar {
            width:
                100%;
            height: 300px;
            border-radius:
                1%;
            margin:
                20px auto;
        }

        .form {
            width:
                100%;
            padding:
                10px;
            margin-bottom:
                20px;
            display: flex;
            flex-direction: column;
            background-color: wheat;
            background-color: white;
        }

        .submit-button {
            margin-top: 30px;
            color: white;
            background-color: #02035e;
            border: 1px solid black;
            border-radius: 5px;

        }

        input {
            margin: 5px;
            text-align: center;
        }

        .reset-button {
            margin-top: 30px;
            color: white;
            background-color: #16942b;
            border: 1px solid black;
            border-radius: 5px;

        }

        label {
            font-weight: 800;
        }
    </style>

</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow  sticky-top p-0">
        <a href="index.html" class="navbar-brand bg-blue d-flex align-items-center px-4 px-lg-5 "
            style="border:solid #02035e 1px;border-radius: 5px;">
            <h2 class="mb-2 text-white ">BLOAD-O-BANK</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="/" class="nav-item nav-link active">Home</a>
                <a href="/login" class="nav-item nav-link">Login</a>
                <a href="/register" class="nav-item nav-link">Register</a>
            </div>

        </div>
    </nav>
    <!-- Navbar End -->
    <h1 style="text-align: center; margin-top: 10px;">Bload Request Form</h1>

    <div class="container">
        <div class="imgcontainer">
            <img src="img/123.JPG" alt="Avatar" class="avatar">
        </div>
        <form action="/BloodRequest" method="post" enctype="multipart/form-data" class="form">
            <h3>Generated by : <%= user_name %>
            </h3>
            <label for="pname">PATIENT NAME : </label>
            <input type="text" name="pname" required id="pname" placeholder="Enter Patient  Full Name 'Jhon Doe' ">
            <label for="pdfFile">UPLOAD MEDICAL PDF : </label>
            <input type="file" name="pdfFile" id="pdfFile"><br>
            <label for="BloodGroup">Blood Group:</label>
            <select id="BloodGroup" name="BloodGroup">
                <option value=""></option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                <!-- Add more options as needed -->
            </select>
            <label for="disease">Disease Name : </label>
            <input type="text" name="disease" id="disease" required>
            <label for="hospitalName">Hosppital Name : </label>
            <input type="text" name="hospitalName" id="hospitalName" required>
            <label for="Address">Address : </label>
            <input type="text" name="Address" id="Address" required>
            <label for="state">State : </label>
            <input type="text" name="state" id="state" required><br>
            <label for="District">District : </label>
            <input type="text" name="District" id="District" required><br>
            <input type="reset" value="reset" class="reset-button">
            <input type="submit" value="Register" class="submit-button">

        </form>
        <% if (error) { %>
            <p id="error" style="color: red; margin-top: 5px;">
                <%= error %>
            </p>
            <% } %> <br>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer wow fadeIn" data-wow-delay="0.1s" style="margin-top: 2rem;">
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">BLOAD-O-BANK</a>, All Right Reserved.
                </div>

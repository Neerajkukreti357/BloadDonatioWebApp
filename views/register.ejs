  <style>
    .container {
      width:
        100%;
      margin:
        0 auto;
      text-align:
        center;
      padding:
        20px;
      border:
        1px solid #ccc;
      border-radius:
        10px;
      box-shadow:
        0 0 10px rgba(0,
          0,
          0,
          0.1);
      height: 80%;
      display: flex;
      flex-direction: column;
    }

    .imgcontainer {
      text-align:
        center;
      margin-bottom:
        20px;
    }

    .avatar {
      width:
        100px;
      height:
        100px;
      border-radius:
        50%;
      margin:
        20px auto;
    }

    .form {
      width:
        100%;
      padding:
        10px;
      margin-bottom:
        20px;
      display: flex;
      flex-direction: column;
      background-color: wheat;
      background-color: white;
    }

    .submit-button {
      margin-top: 30px;
      color: white;
      background-color: #02035e;
      border: 1px solid black;
      border-radius: 5px;

    }

    input {
      margin: 5px;
      text-align: center;
    }

    .reset-button {
      margin-top: 30px;
      color: white;
      background-color: #16942b;
      border: 1px solid black;
      border-radius: 5px;

    }

    label {
      font-weight: 800;
    }
  </style>

</head>

<body>
  <!-- Spinner Start -->
  <div id="spinner"
    class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
  <!-- Spinner End -->

  <!-- Navbar Start -->
  <nav class="navbar navbar-expand-lg bg-white navbar-light shadow  sticky-top p-0">
    <a href="index.html" class="navbar-brand bg-blue d-flex align-items-center px-4 px-lg-5 "
      style="border:solid #02035e 1px;border-radius: 5px;">
      <h2 class="mb-2 text-white ">BLOAD-O-BANK</h2>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <div class="navbar-nav ms-auto p-4 p-lg-0">
        <a href="/" class="nav-item nav-link active">Home</a>
        <a href="/login" class="nav-item nav-link">Login</a>
        <a href="/register" class="nav-item nav-link">Register</a>
      </div>

    </div>
  </nav>
  <!-- Navbar End -->
  <h1 style="text-align: center; margin-top: 10px;">Registration Page</h1>

  <div class="container">
    <div class="imgcontainer">
      <img src="img/avatar2.JPG" alt="Avatar" class="avatar">
    </div>
    <form action="/registration" method="post" id="rform" class="form">
      <label for="uname">USER NAME : </label>
      <input type="text" name="uname" required id="uname" placeholder="Enter Your Full Name">
      <label for="email">EMAIL : </label>
      <input type="email" name="email" required id="email" placeholder="Enter Your Email">
      <div style="display: flex;">
        <label for="gender" style="margin-right: 2em;margin-top: 2em;">gender : </label>
        <label for="male" style="margin-right: 2em;margin-top: 2em;">MALE </label>
        <input type="radio" name="gender" id="male" value="male" required style="margin-right: 2em;margin-top: 2em;">
        <label for="female" style="margin-right: 2em;margin-top: 2em;">FEMALE </label>
        <input type="radio" name="gender" value="female" required id="female"
          style="margin-right: 2em;margin-top: 2em;">
        <label for="other" style="margin-right: 2em;margin-top: 2em;">Other </label>
        <input type="radio" name="gender" value="other" id="other" required style="margin-right: 2em;margin-top: 2em;">
      </div>
      <label for="phone">Phone Number : </label>
      <input type="text" name="phoneNumber" required id="phone" placeholder="Enter Your 10 Digit Whatsapp Number">
      <label for="password">password: </label>
      <input type="password" name="password" required id="password">
      <label for="cpassword">confirm password : </label>
      <input type="password" name="cpassword" required id="cpassword">
      <input type="reset" value="reset" class="reset-button">
      <input type="submit" value="Register" class="submit-button">

    </form>
    <% if (error) { %>
      <p id="error" style="color: red; margin-top: 5px;">
        <%= error %>
      </p>
      <% } %> <br>
  </div>

  <!-- Footer Start -->
  <div class="container-fluid bg-dark text-light footer wow fadeIn" data-wow-delay="0.1s" style="margin-top: 2rem;">
    <div class="copyright">
